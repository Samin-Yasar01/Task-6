@model List<CollaborativePresentation.Models.Presentation>

@{
    ViewData["Title"] = "Presentations";
}

<div class="container mt-5">
    <h1 class="mb-4">Collaborative Presentations</h1>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Create New Presentation</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="CreatePresentation">
                        <div class="mb-3">
                            <label for="name" class="form-label">Presentation Name</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="creatorName" class="form-label">Your Name</label>
                            <input type="text" class="form-control" id="creatorName" name="creatorName" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h3>Existing Presentations</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Creator</th>
                        <th>Created</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var presentation in Model)
                    {
                        <tr>
                            <td>@presentation.Name</td>
                            <td>@presentation.CreatorName</td>
                            <td>@presentation.CreatedDate.ToLocalTime().ToString("g")</td>
                            <td>
                                <form method="get" asp-action="Presentation" class="d-inline">
                                    <input type="hidden" name="id" value="@presentation.Id">
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="userName" placeholder="Your name" required>
                                        <button type="submit" class="btn btn-success">Join</button>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>